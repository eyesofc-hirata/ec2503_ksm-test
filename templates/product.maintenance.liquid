{% render 'redirect-to-houjin' %}
<main class="mt-3">
    {{ 'product.css' | asset_url | stylesheet_tag }}
    <style>
        .page-content .product-inspection-freearea h3 {
            margin-right: -15px;
            margin-left: -15px;
        }
    </style>

    <div class="container-fluid page-content bg-white product-detail">
        <div class="row">
            <div class="col">
                <div class="container">
                    <div class="row justify-content-center mb-5">
                        <div class="col">
                            <div class="row mb-5 product-detail" id="product_id13">
                                <div class="col">
                                    <div class="row">
                                        <div class="col-md-4 mb-3">
                                            <div id="detail_image_box__slides" class="slides border">
                                                <div id="detail_image_box__item--1"><img src="{{ product.featured_image | image_url: width: 800 }}" class="img-fluid" alt="{{ product.title }}"></div>
                                            </div>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="row mb-2 product-title">
                                                <div class="col">
                                                    <strong>{{ product.metafields.custom.explain }}</strong>
                                                </div>
                                            </div>
                                            <div class="row mb-2 product-title">
                                                <div class="col">
                                                    <h2>{{ product.title }}</h2>
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col product-description">
                                                    {{ product.description }}
                                                </div>
                                            </div>
                                            {% for variant in product.variants %}
                                            <div class="mb-3">
                                                <div class="row">
                                                <div class="col-md-12 mb-2">
                                                    {{ product.options_with_values[0].name }} :
                                                    <strong><big>{{ variant.title }}</big></strong>
                                                    <div class="product-price">
                                                    {{ variant.price | money }}
                                                    <small>(税込)</small>
                                                    <small class="d-block d-md-inline">※工事費・廃棄費を含む</small>
                                                    </div>
                                                </div>
                                                </div>
                                                <div class="row">
                                                <div class="col-md-5 mb-3">
                                                    <form method="post" action="/cart/add">
                                                    <input type="hidden" name="id" value="{{ variant.id }}">
                                                    <input type="submit" class="btn btn-block btn-blue btn-cartin" value="注文する">
                                                    </form>
                                                </div>
                                                </div>
                                            </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-5">
                                <div class="col">
                                    <h3 class="mb-2">セット内容</h3>
                                    <div>
                                        {{ product.metafields.custom.freearea | escape  | newline_to_br }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>