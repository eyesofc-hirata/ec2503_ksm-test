{% render 'redirect-to-houjin' %}
<main class="mt-3">
    {{ 'product.css' | asset_url | stylesheet_tag }}
    {{ 'inspection.css' | asset_url | stylesheet_tag }}
    <style>
        .page-content .product-inspection-freearea h3 {
            margin-right: -15px;
            margin-left: -15px;
        }
    </style>

    <div class="container-fluid page-content bg-white product-detail">
        <div class="row">
            <div class="col">
                <div class="container">
                    <div class="row justify-content-center mb-5">
                        <div class="col">
                            <div class="row">
                                <div class="col-md-4 mr-auto mb-3">
                                    <div id="detail_image_box__slides" class="slides border">
                                        <div id="detail_image_box__item--1"><img src="{{ product.featured_image | image_url: width: 800 }}" class="img-fluid" alt="{{ product.title }}"></div>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="row mb-2 product-title">
                                        <div class="col">
                                            <strong>{{ product.metafields.custom.explain }}</strong>
                                        </div>
                                    </div>
                                    <div class="row mb-1 product-title">
                                        <div class="col">
                                            <h2>{{ product.title }}</h2>
                                        </div>
                                    </div>
                                    <div class="row mb-1">
                                        <div class="col product-description">
                                            {{ product.description }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-auto mb-2">
                                            <div class="product-price">
                                                {{ product.price | money }} <small>(税込)</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div id="detail_cart_box" class="cart_area">
                                        <div class="row">
                                            <div class="col-md-5 mb-3">
                                                <form method="post" action="/cart/add">
                                                    <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                                                    <input type="submit" value="注文する" class="btn btn-block btn-blue btn-cartin">
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mb-5">
                        <div class="col">
                            {{ product.metafields.custom.freearea }}
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-md-8 text-center">
                            <div class="row mb-3 product-title">
                                <div class="col">
                                    <h2>{{ product.title }}</h2>
                                </div>
                            </div>
                            <div class="row mb-3 product-price">
                                <div class="col">
                                    {{ product.price | money }} <small>(税込)</small>
                                </div>
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-md-5 mb-3">
                                    <form method="post" action="/cart/add">
                                        <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                                        <input type="submit" value="注文する" class="btn btn-block btn-blue btn-cartin">
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>