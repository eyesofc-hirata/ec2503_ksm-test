<main class="mt-3" id="page-login">
{{ 'form.css' | asset_url | stylesheet_tag }}
  <div class="container-fluid page-content bg-white">
      <div class="row">
          <div class="col">
              <div class="container">
                  <div id="login">
                      <div class="row justify-content-center">
                          <div class="col col-md-6">
                              <div class="row bg-lightblue py-3 p-md-5">
                                  <div class="col">
                                      {% form 'customer_login' %}
                                            {% if form.errors %}
                                            <div class="alert alert-danger">
                                            {{ form.errors | default_errors }}
                                            </div>
                                            {% endif %}
                                            <div class="row my-2">
                                                <div class="col"><input type="email" id="login_email" name="customer[email]" required="required" max_length="320" style="ime-mode: disabled;" placeholder="メールアドレス" autofocus="autofocus" class="form-control" /></div>
                                            </div>
                                            <div class="row my-2">
                                                <div class="col"><input type="password" id="login_pass" name="customer[password]" required="required" max_length="320" placeholder="パスワード" class="form-control" /></div>
                                            </div>
                                            <div class="row justify-content-center mt-3">
                                                <div class="col-auto col-md-6"><button type="submit" class="btn btn-block btn-primary btn-blue">ログイン</button></div>
                                            </div>
                                      {% endform %}
                                  </div>
                              </div>
                              <div class="row mt-3">
                                  <div class="col">
                                      <ul class="list">
                                          <li class="list-item"><a href="#recover">ログイン情報をお忘れの方はこちら</a></li>
                                          <li class="list-item"><a href="/account/register" id="link_register">ユーザー登録</a></li>
                                      </ul>
                                  </div>
                              </div>
                          </div>
                      </div>
                  </div>
                  <div id="recover">
                      <div class="row justify-content-center">
                          <div class="col col-md-6">
                              <div class="row bg-lightblue py-3 p-md-5">
                                  <p>パスワードをリセットするためのメールを送信します。</p>
                                  <div class="col">
                                        {% form 'recover_customer_password' %}
                                            <div class="row my-2">
                                                <div class="col"><input type="email" id="email" name="email" required="required" max_length="320" placeholder="メールアドレス" class="form-control" /></div>
                                            </div>
                                            <div class="row justify-content-center mt-3">
                                                <div class="col-auto col-md-6"><button type="submit" class="btn btn-block btn-primary btn-blue">送信</button></div>
                                            </div>
                                        {% endform %}
                                  </div>
                              </div>
                              <div class="row mt-3">
                                  <div class="col">
                                      <ul class="list">
                                          <li class="list-item"><a href="#login">ログインページに戻る</a></li>
                                      </ul>
                                  </div>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
</main>