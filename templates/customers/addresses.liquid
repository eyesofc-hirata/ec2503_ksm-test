<main class="mt-3" id="page-account">
{{ 'theme.css' | asset_url | stylesheet_tag }}
{{ 'styles_account.css' | asset_url | stylesheet_tag }}
<div class="container-fluid page-content bg-white">
<div class="row">
<div class="col">
<div class="container">

{% paginate customer.addresses by 5 %}

<div class="sec-account sec-account--wide">

    <p class="sec-shipping__back"><a href="{{ routes.account_url }}" class="mi-hov-b"><span><img src="{{ 'ico_arw01.svg' | asset_url }}" width="12" height="6" alt=""></span>{{ 'customer.account.return' | t }}</a></p>

    <div class="sec-shipping">

        {% comment %}
        List all customer addresses with a unique edit form.
        Also add pagination in case they have a large number of addresses
        {% endcomment %}
        <ul class="sec-shipping__card l-flex-grid">
            {% for address in customer.addresses %}
            <li class="card-item">
                {% if address == customer.default_address %}
                <p class="card-item__hdg">{{ 'customer.addresses.default' | t }}</p>
                {% else %}
                <p class="card-item__hdg"><ls-static-477921>住所</ls-static-477921>{{ forloop.index }}</p>
                {% endif %}
                <div class="card-item__box">
                    {{ address | format_address }}
                    <div class="card-item__btn l-flex-grid">
                        <p class="btn btn--edit">
                            <button id="EditFormButton_{{ address.id }}" type="button" class="btn btn--small address-edit-toggle" data-form-id="{{ address.id }}" aria-owns="EditAddress_{{ address.id }}" aria-expanded="false">
                                {{ 'customer.addresses.edit' | t }}
                            </button>
                        </p>
                        <p class="btn btn--delete">
                            <button type="button" class="btn btn--secondary btn--small address-delete" data-target="{{ address.url }}" data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}">
                                {{ 'customer.addresses.delete' | t }}
                            </button>
                        </p>
                    </div>
                </div>
            </li>
            {% endfor %}
        </ul>

        {% for address in customer.addresses %}
        <div class="sec-account">
            <div id="EditAddress_{{ address.id }}" class="sec-account__edit form-vertical hide">
                {% form 'customer_address', address %}
                    {% if form.posted_successfully? %}
                    <script>
                        window.location.href = '{{ routes.account_url }}';
                    </script>
                    {% endif %}

                <h2 class="sec-account__hdg f-bold">{{ 'customer.addresses.edit_address' | t }}</h2>

                <div class="c-form c-form--half">
                    <input type="text" class="c-input c-input--half" id="AddressLastName_{{ form.id }}" name="address[last_name]" value="{{ form.last_name }}" autocomplete="family-name">
                    <input type="text" class="c-input c-input--half" id="AddressFirstName_{{ form.id }}" name="address[first_name]" value="{{ form.first_name }}" autocomplete="given-name">
                </div>

                <div class="c-form">
                    <input type="text" placeholder="{{ 'customer.addresses.company' | t }}" class="c-input" id="AddressCompany_{{ form.id }}" name="address[company]" value="{{ form.company }}" autocomplete="organization">
                </div>

                <div class="c-form">
                    <input type="tel" placeholder="{{ 'customer.addresses.phone' | t }}" class="c-input" id="AddressPhone_{{ form.id }}" name="address[phone]" value="{{ form.phone }}" autocomplete="phone">
                </div>

                <div class="c-form">
                    <input type="text" placeholder="{{ 'customer.addresses.zip' | t }}" class="c-input" id="AddressZip_{{ form.id }}" name="address[zip]" value="{{ form.zip }}" autocapitalize="characters" autocomplete="postal-code">
                </div>

                <div class="c-form c-form--half">
                    <div class="c-select">
                        <select id="AddressCountry_{{ form.id }}" class="address-country-option" data-form-id="{{ form.id }}" name="address[country]" data-default="{{ form.country }}" autocomplete="country">{{ all_country_option_tags }}</select>
                    </div>
                    <div id="AddressProvinceContainer_{{ form.id }}" class="c-select">
                        {% comment %} <label for="AddressProvince_{{ form.id }}">{{ 'customer.addresses.province' | t }}</label> {% endcomment %}
                        <select id="AddressProvince_{{ form.id }}" name="address[province]" data-default="{{ form.province }}" autocomplete="address-level1"></select>
                    </div>
                </div>

                <div class="c-form">
                    <input type="text" placeholder="{{ 'customer.addresses.address1' | t }}" class="c-input" id="AddressAddress1_{{ form.id }}" name="address[address1]" value="{{ form.address1 }}" autocomplete="street-address address-line1">
                </div>

                <div class="c-form">
                    {% comment %} <label for="AddressCity_{{ form.id }}">{{ 'customer.addresses.city' | t }}</label> {% endcomment %}
                    <input type="text" class="c-input" name="address[city]" value="{{ form.city }}" autocomplete="address-level2">
                </div>

                <div class="c-form">
                    <input type="text" placeholder="{{ 'customer.addresses.address2' | t }}" class="c-input" id="AddressAddress2_{{ form.id }}" name="address[address2]" value="{{ form.address2 }}" autocomplete="street-address address-line2">
                </div>

                <p class="c-radio sec-account__address-set">{{ form.set_as_default_checkbox }}
                    <label for="address_default_address_{{ form.id }}">{{ 'customer.addresses.set_default' | t }}</label>
                </p>

                <div class="c-form">
                    <input type="submit" class="btn c-submit" value="{{ 'customer.addresses.update' | t }}">
                </div>

                <p class="sec-account__note"><button type="button" class="text-link address-edit-toggle" data-form-id="{{ form.id }}">{{ 'customer.addresses.cancel' | t }}</button></p>

                {% endform %}
            </div>
        </div>
        {% endfor %}

        <div class="sec-shipping__btns">
            <p class="sec-shipping__add">
                {% comment %} <button type="button" class="btn address-new-toggle" id="AddressNewButton" aria-expanded="false" aria-owns="AddressNewForm">{{ 'customer.addresses.add_new' | t }}</button> {% endcomment %}
                <button type="button" class="mi-hov-b btn address-new-toggle" id="AddressNewButton" aria-expanded="false" aria-owns="AddressNewForm"><span><img src="{{ 'ico_plus.svg' | asset_url }}" width="12" height="12" alt=""></span>{{ 'customer.addresses.add_new' | t }}</button>
            </p>

            <p class="sec-shipping__back"><a href="{{ routes.account_url }}" class="mi-hov-b"><span><img src="{{ 'ico_arw01.svg' | asset_url }}" width="12" height="6" alt=""></span>{{ 'customer.account.return' | t }}</a></p>
        </div>

        <!-- .sec-shipping // -->
    </div>
    <!-- .sec-account // -->
</div>

<div class="sec-account sec-account--wide">
    <div class="sec-shipping">
        {% comment %}
        Add address form, hidden by default
        {% endcomment %}
        <div id="AddressNewForm" class="sec-account form-vertical hide">
            {% form 'customer_address', customer.new_address %}
            <h2 class="sec-account__hdg f-bold">{{ 'customer.addresses.add_new' | t }}</h2>

            <div class="c-form c-form--half">
                <input type="text" placeholder="{{ 'customer.addresses.last_name' | t }}" class="c-input c-input--half" name="address[last_name]" value="{{ form.last_name }}" autocomplete="family-name">
                <input type="text" placeholder="{{ 'customer.addresses.first_name' | t }}" class="c-input c-input--half" name="address[first_name]" value="{{ form.first_name }}" autocomplete="given-name">
            </div>

            <div class="c-form">
                <input type="text" placeholder="{{ 'customer.addresses.company' | t }}" class="c-input" name="address[company]" value="{{ form.company }}" autocomplete="organization">
            </div>

            <div class="c-form">
                <input type="tel" placeholder="{{ 'customer.addresses.phone' | t }}" class="c-input" name="address[phone]" value="{{ form.phone }}" autocomplete="phone">
            </div>

            <div class="c-form">
                <input type="text" placeholder="{{ 'customer.addresses.zip' | t }}" class="c-input" name="address[zip]" value="{{ form.zip }}" autocapitalize="characters" autocomplete="postal-code">
            </div>

            <div class="c-form c-form--half">
                <div class="c-select">
                    <select id="AddressCountryNew" name="address[country]" data-default="{{ form.country }}" autocomplete="country">{{ all_country_option_tags }}</select>
                </div>
                <div id="AddressProvinceContainerNew" class="c-select" style="display:none">
                    <select id="AddressProvinceNew" name="address[province]" data-default="{{ form.province }}" autocomplete="address-level1"></select>
                </div>
            </div>

            <div class="c-form">
                <input type="text" placeholder="{{ 'customer.addresses.address1' | t }}" class="c-input" name="address[address1]" value="{{ form.address1 }}" autocomplete="street-address address-line1">
            </div>

            <div class="c-form">
                <input type="text" placeholder="{{ 'customer.addresses.address2' | t }}" class="c-input" id="AddressAddress2New" name="address[address2]" value="{{ form.address2 }}" autocomplete="street-address address-line2">
            </div>
            {% comment %} <div class="grid__item medium-up--one-half">
                <label for="AddressCityNew">{{ 'customer.addresses.city' | t }}</label>
                <input type="text" id="AddressCityNew" name="address[city]" value="{{ form.city }}" autocomplete="address-level2">
            </div> {% endcomment %}

            <p class="c-radio sec-account__address-set">{{ form.set_as_default_checkbox }}
                <label for="address_default_address_new">{{ 'customer.addresses.set_default' | t }}</label>
            </p>

            <div class="c-form">
                <input type="submit" class="btn c-submit" value="{{ 'customer.addresses.add' | t }}">
            </div>

            <p class="sec-account__note"><button type="button" class="text-link address-new-toggle" data-form-id="{{ form.id }}">{{ 'customer.addresses.cancel' | t }}</button></p>

            {% endform %}
        </div>
        <!-- .sec-shipping // -->
    </div>
    <!-- .sec-account // -->
</div>


{%- if paginate.pages > 1 -%}
{% include 'pagination', paginate: paginate %}
{%- endif -%}

{% endpaginate %}


</div>
</div>
</div>
</div>
</main>