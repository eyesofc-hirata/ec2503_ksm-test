<main class="mt-3" id="page-reset-password">
  {{ 'form.css' | asset_url | stylesheet_tag }}
  <div class="container-fluid page-content bg-white">
    <div class="row">
      <div class="col">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col col-md-6">
              <div class="row bg-lightblue py-3 p-md-5">
                <div class="col">
                  {% form 'reset_customer_password' %}
                    {% if form.errors %}
                      <div class="alert alert-danger">
                        {{ form.errors | default_errors }}
                      </div>
                    {% endif %}

                    <div class="row my-2">
                      <div class="col">
                        <input
                          type="password"
                          name="customer[password]"
                          placeholder="新しいパスワード"
                          required="required"
                          class="form-control"
                        >
                      </div>
                    </div>

                    <div class="row my-2">
                      <div class="col">
                        <input
                          type="password"
                          name="customer[password_confirmation]"
                          placeholder="パスワード確認"
                          required="required"
                          class="form-control"
                        >
                      </div>
                    </div>

                    <input type="hidden" name="reset_token" value="{{ reset_password_token }}">

                    <div class="row justify-content-center mt-3">
                      <div class="col-auto col-md-12">
                        <button type="submit" class="btn btn-block btn-primary btn-blue" id="reset-button">パスワードをリセット</button>
                      </div>
                    </div>
                  {% endform %}
                </div>
              </div>

              <div class="row mt-3">
                <div class="col text-center">
                  <a href="/account/login">ログインページへ戻る</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
